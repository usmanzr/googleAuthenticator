
@{
    ViewBag.Title = "CalculatorForm";
}

<h2>CalculatorForm</h2>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="form-container">
            <h2 class="text-center mb-4">Simple Web Form</h2>

            <form asp-controller="Calculator" asp-action="Calculate" method="post">
                <input type="number" name="Num1" class="form-control mb-3" placeholder="Enter first number" required />
                <input type="number" name="Num2" class="form-control mb-3" placeholder="Enter second number" required />

                <div class="d-grid gap-2">
                    <button type="submit" name="operation" value="Add" class="btn btn-primary">Add</button>
                    <button type="submit" name="operation" value="Subtract" class="btn btn-secondary">Subtract</button>
                    <button type="submit" name="operation" value="Multiply" class="btn btn-success">Multiply</button>
                    <button type="submit" name="operation" value="Divide" class="btn btn-danger">Divide</button>
                </div>
            </form>

            @if (ViewBag.Result != null)
            {
                <div class="result text-center mt-4">
                    <h4>Result: @ViewBag.Result</h4>
                </div>
            }
        </div>
    </div>
</body>
</html>


